{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinVersions",
    "helpers:pinGitHubActionDigests"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/requirements\\.txt$/"
    ]
  },
  "ansible-galaxy": {
    "managerFilePatterns": [
      "/requirements\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.mise\\.toml$/"
      ],
      "matchStrings": [
        "python\\s*=\\s*\"(?<currentValue>[\\d.]+)\""
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.mise\\.toml$/"
      ],
      "matchStrings": [
        "bats\\s*=\\s*\"(?<currentValue>[\\d.]+)\""
      ],
      "depNameTemplate": "bats-core",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "bats-core/bats-core"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Taskfile\\.ya?ml$/",
        "/tests/bash/run-tests\\.sh$/"
      ],
      "matchStrings": [
        "BATS_VERSION=\"(?<currentValue>[\\d.]+)\""
      ],
      "depNameTemplate": "bats-core",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "bats-core/bats-core"
    }
  ]
}
