---
# Docker Compose file for Traefik

services:
  traefik:
    image: {{ traefik_config.traefik_image }}
    container_name: {{ traefik_config.traefik_container_name }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - traefik-network
    ports:
      - "{{ traefik_config.traefik_http_port }}:80"
      - "{{ traefik_config.traefik_https_port }}:443"
      - "{{ traefik_config.traefik_dashboard_port }}:8080"
    volumes:
      # SECURITY NOTE: Mounting Docker socket provides root-level access
      # Required for Traefik's Docker provider but should be secured
      # Consider using Docker Socket Proxy for enhanced security
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /etc/traefik:/etc/traefik:ro
      - /var/lib/traefik:/data
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.dashboard.rule=Host(`traefik.localhost`)"
      - "traefik.http.routers.dashboard.service=api@internal"

networks:
  traefik-network:
    name: {{ traefik_config.traefik_network_name }}
    external: false
