[Unit]
Description=Docker Maintenance - Prune and Health Checks
After=network-online.target docker.service
Wants=network-online.target
Requires=docker.service

[Service]
Type=oneshot
User=root
ExecStart=/usr/bin/ansible-playbook \
  {{ maintenance_workdir }}/ansible/playbooks/maintenance-docker.yml \
  --inventory {{ maintenance_workdir }}/ansible/inventory/hosts.yml \
  --extra-vars "target_host={{ ansible_hostname }}"
StandardOutput=journal
StandardError=journal
SyslogIdentifier=maintenance-docker
