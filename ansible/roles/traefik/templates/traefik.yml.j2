---
# Traefik static configuration
global:
  checkNewVersion: true
  sendAnonymousUsage: false

log:
  level: {{ traefik_log_level }}

{% if traefik_enable_access_logs %}
accessLog:
  filePath: "/data/access.log"
  bufferingSize: 100
{% endif %}

{% if traefik_enable_api %}
api:
  dashboard: {{ traefik_enable_dashboard | lower }}
  insecure: true  # Note: In production, use proper authentication
{% endif %}

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: "{{ traefik_network_name }}"
  file:
    directory: "/etc/traefik/dynamic"
    watch: true
