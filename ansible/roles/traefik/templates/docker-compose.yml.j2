---
# Docker Compose file for Traefik

services:
  traefik:
    image: {{ traefik_image }}
    container_name: {{ traefik_container_name }}
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - traefik-network
    ports:
      - "{{ traefik_http_port }}:80"
      - "{{ traefik_https_port }}:443"
      # Note: Dashboard port not exposed by default for security
      # To expose, add the following line (requires proper authentication):
      # - "{{ traefik_dashboard_port }}:{{ traefik_dashboard_port }}"
    volumes:
      # SECURITY NOTE: Mounting Docker socket provides root-level access
      # Required for Traefik's Docker provider but should be secured
      # Consider using Docker Socket Proxy for enhanced security
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - {{ traefik_config_dir }}:/etc/traefik:ro
      - {{ traefik_data_dir }}:/data
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.dashboard.rule=Host(`traefik.localhost`)"
      - "traefik.http.routers.dashboard.service=api@internal"

networks:
  traefik-network:
    name: {{ traefik_network_name }}
    external: false
